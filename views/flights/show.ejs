<%- include('../partials/header') %>

<h1>Flight Destination</h1>
<h2>Flight Details</h2>
<p>Airline: <%= flight.airline %></p>
<p>Airport: <%= flight.airport %></p>
<p>Flight Number: <%= flight.flightNo %></p>
<p>Date: <%= flight.departs %></p>

<h2>Destinations</h2>
<% flight.destinations.forEach(function(destination) { %>
  <p>Airport: <%= destination.airport %></p>
  <p>Arrival: <%= destination.arrival %></p>
<% }) %>

<h2>Tickets</h2>
<% tickets.forEach(function(ticket) { %>
  <p>Seat Number: <%= ticket.seat %></p>
  <p>Price: $<%= ticket.price %></p>
  <p>Flight Number: <%= ticket.flightNo %></p>
<% }) %>


<p><a href="<%= newTicketLink %>">New Ticket</a></p>


<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">

  <label for="destination">Destination</label>
  <select name="airport" id="destination">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>

  <label for="landing-time">Landing Time</label>
  <input type="datetime-local" name="arrival" id="landing-time">

  <input type="submit" value="Add Flight Details">
</form>

<%- include('../partials/footer') %>