<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Date</th>
      <th>Details</th>
  <tbody>
    <% flights.forEach(function(f){ %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/show/<%= f.id %>">Details</a></td> 
      </tr>
   <% })%>
  </tbody>
</table>

<%- include('../partials/header') %>
